---
layout: null
permalink: /search.json
---
[
{% assign first = true %}
{% for p in site.pages %}
  {% assign in_chapters = p.path contains 'chapters/' %}
  {% assign include_doc = p.url == '/catechism-outline/' or p.url == '/implementation-guide/' or p.url == '/sample-posts/' %}
  {% if in_chapters or include_doc %}
    {% assign h1 = p.content | split: '\n' | first | replace: '# ', '' %}
    {% if first %}{% assign first = false %}{% else %},{% endif %}
    {
      "title": {{ (p.title | default: h1) | jsonify }},
      "url": {{ p.url | relative_url | jsonify }},
      "content": {{ p.content | strip_html | strip_newlines | jsonify }}
    }
  {% endif %}
{% endfor %}
]
