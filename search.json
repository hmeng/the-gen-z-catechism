---
layout: null
permalink: /search.json
---
[
{% assign first = true %}
{% for p in site.pages %}
  {% if p.path contains 'chapters/' or p.url == '/catechism-outline/' %}
    {% assign h1 = p.content | split: '\n' | first | replace: '# ', '' %}
    {% assign ttl = p.title | default: h1 %}
    {% if first %}{% assign first = false %}{% else %},{% endif %}
    {
      "title": {{ ttl | jsonify }},
      "url": {{ p.url | relative_url | jsonify }},
      "content": {{ p.content | markdownify | strip_html | replace: '\n', ' ' | replace: '  ', ' ' | jsonify }},
      "content_html": {{ p.content | markdownify | jsonify }}
    }
  {% endif %}
{% endfor %}
]
